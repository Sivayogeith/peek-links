{
  "manifest_version": 2,
  "name": "Peek Links",
  "version": "1.0",
  "description": "Adds preview to links on hover.",
  "permissions": ["storage"],
  "icons": {
    "48": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["PeekLinks.js", "main.js"]
    }
  ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Peek Links Settings",
    "default_popup": "settings.html"
  }
}
